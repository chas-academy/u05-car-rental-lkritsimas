{% extends "Base.html.twig" %}
{% set title = 'New customer' %}
{% block content %}
    <h2>New customer</h2>
    <form id="customer" method="POST" action="/customers/new">
        <table>
            <tr>
                <th>Personal identity number</th>
                <td>
                    <input name="id" placeholder="YYMMDDXXXX" maxlength="10" required/>
                </td>
            </tr>
            <tr>
                <th>First name</th>
                <td>
                    <input name="firstname" required/>
                </td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>
                    <input name="surname" required/>
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    <input name="address" required/>
                </td>
            </tr>
            <tr>
                <th>Post code</th>
                <td>
                    <input name="postcode" maxlength="5" required/>
                </td>
            </tr>
            <tr>
                <th>City</th>
                <td>
                    <input name="city" required/>
                </td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td>
                    <input name="phone" maxlength="10" required/>

                </td>
            </tr>
            <tfoot>
                <tr colspan="2">
                    <td colspan="2">
                        <button type="submit" class="block">Create</button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>
    {% include("ResponseMessage.html.twig") %}
{% endblock %}
